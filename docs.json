{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "P2P Documentation",
  "colors": {
    "primary": "#1347FF",
    "light": "#1347FF",
    "dark": "#1347FF"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
  },
  "background": {
    "decoration": "gradient"
  },
  "fonts":{
    "heading": {
      "family": ""
    },
    "body": {
      "family": "Inter"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "docs/platform-overview",
              "docs/get-started",
              "docs/networks-supported",
              "docs/authentication"
            ]
          },
          {
            "group": "Plan Your Integration",
            "pages": [
              "docs/planning-considerations"
            ]
          },
          {
            "group": "Products",
            "pages": [
              {
                "group": "Pectra Upgrade",
                "pages": [
                  "docs/pectra-upgrade-overview",
                  {
                    "group": "Validator Management Updates",
                    "pages": [
                      "docs/validator-consolidation",
                      "docs/new-validator-creation"
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Unified API",
            "pages": [
              "reference/introduction-unified",
              {
                "group": "Unified",
                "pages": [
                  "reference/unified/create-staking-request",
                  "reference/unified/create-unstake-request",
                  "reference/unified/create-withdrawal-request",
                  "reference/unified/broadcast-transaction"
                ]
              }
            ]
          },
          {
            "group": "Staking API",
            "pages": [
              "reference/introduction-api",
              {
                "group": "Aptos",
                "pages": [
                  "reference/aptos/broadcast-signed-transaction-to-the-aptos-network",
                  "reference/aptos/get-a-transaction-status",
                  "reference/aptos/create-delegated-add-transaction",
                  "reference/aptos/create-delegated-reactivate-transaction",
                  "reference/aptos/create-delegated-unlock-transaction",
                  "reference/aptos/create-delegated-withdraw-transaction"
                ]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Help Center",
          "href": "https://p2p.org/faq/en",
          "icon": "message-question"
        },
        {
          "anchor": "Blog",
          "href": "https://p2p.org/economy",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact us",
        "href": "https://www.p2p.org/#form"
      }
    ],
    "primary": {
      "type": "button",
      "label": "(re)stake ETH",
      "href": "https://eth.p2p.org/auth"
    }
  },
  "footer": {
    "socials": {
      "telegram": "https://t.me/P2Pstaking",
      "x": "https://twitter.com/p2pvalidator",
      "linkedin": "https://www.linkedin.com/company/p2p-org/",
      "youtube": "https://www.youtube.com/channel/UC9pRzyJx5YrUNfmg1vLZ-bQ/featured",
      "medium": "https://medium.com/p2peconomy"
    }
  }
}